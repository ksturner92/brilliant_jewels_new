<%= semantic_form_for [:admin, @artwork] do |f| %>
	<%= f.inputs :name, :descr, :medium, :price %>
	<%=f.inputs "Attachment", :multipart => true do %>
		<%=f.input :avatar, :as => :file, :hint => f.object.avatar.present? \
    ? f.template.image_tag(f.object.avatar.url(:thumb))
    : f.template.content_tag(:span, "no avatar yet") %>
      <%=f.input :avatar, :as => :hidden %>
    <%= f.submit %>
<% end %>
<% end %>